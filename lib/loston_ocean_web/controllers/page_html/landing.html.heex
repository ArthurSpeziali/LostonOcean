<div class="min-h-screen flex flex-col bg-gradient-to-b from-blue-900 via-blue-800 to-blue-700 text-white relative overflow-hidden">
  <!-- Decorative bubbles and waves -->
  <div class="absolute top-0 left-0 w-full h-full pointer-events-none">
    <div class="absolute w-64 h-64 bg-blue-800 rounded-full opacity-20 animate-pulse" style="top:10%; left:5%;"></div>
    <div class="absolute w-96 h-96 bg-blue-700 rounded-full opacity-15 animate-pulse" style="top:50%; left:70%;"></div>
    <div class="absolute w-72 h-72 bg-blue-600 rounded-full opacity-10 animate-pulse" style="top:80%; left:30%;"></div>
    <!-- Sun reflections -->
    <div class="absolute w-48 h-48 bg-yellow-200 rounded-full opacity-10 blur-3xl" style="top:15%; left:20%;"></div>
    <div class="absolute w-32 h-32 bg-yellow-100 rounded-full opacity-5 blur-2xl" style="top:60%; left:60%;"></div>
  </div>

  <!-- Header / Navigation -->
  <header class="flex justify-between items-center p-8 z-10 relative">
    <h1 class="text-3xl md:text-4xl font-bold tracking-wide">Loston Ocean</h1>
    <nav class="space-x-8 text-lg font-medium">
      <a href="#how" class="hover:text-blue-300 transition-colors">How It Works</a>
      <a href="#messages" class="hover:text-blue-300 transition-colors">Messages</a>
      <a href="#send" class="hover:text-blue-300 transition-colors">Send a Bottle</a>
      <a href="#login" class="hover:text-blue-300 transition-colors">Login</a>
    </nav>
  </header>

  <!-- Hero Section -->
  <section class="flex flex-col justify-center items-center flex-1 text-yellow-100 text-center px-6 relative mt-24 z-10">
    <!-- Hero title -->
    <h2 class="text-6xl md:text-7xl font-extrabold mb-8 drop-shadow-lg tracking-wide">Throw Your Bottle Into the Ocean</h2>
    <!-- Hero description -->
    <p class="text-xl md:text-2xl max-w-3xl mb-12 drop-shadow-md leading-relaxed text-yellow-100">
      Connect anonymously with people around the world. Send your message and let it float across the virtual sea.
    </p>
    <!-- Call to Action Button -->
    <a href="#send" class="px-10 py-4 bg-blue-600 hover:bg-blue-500 rounded-full font-semibold shadow-lg transition-all">
      Send a Bottle
    </a>

    <!-- Animated droplets -->
    <div class="absolute w-2 h-2 bg-blue-400 rounded-full animate-bounce" style="top:20%; left:15%; animation-delay:0s;"></div>
    <div class="absolute w-2 h-2 bg-blue-300 rounded-full animate-bounce" style="top:40%; left:70%; animation-delay:0.5s;"></div>
    <div class="absolute w-2 h-2 bg-blue-200 rounded-full animate-bounce" style="top:70%; left:50%; animation-delay:1s;"></div>
  </section>

  <!-- How It Works Section -->
  <section id="how" class="py-24 px-6 bg-blue-800 text-blue-100 relative z-10">
    <!-- Section title -->
    <h3 class="text-4xl md:text-5xl font-bold text-center mb-16">How It Works</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-16 max-w-6xl mx-auto">
      <!-- Step 1 -->
      <div class="text-center p-8 bg-blue-900 bg-opacity-50 rounded-xl shadow-lg hover:scale-105 transition-transform">
        <div class="text-7xl mb-6">📩</div>
        <h4 class="font-semibold text-2xl mb-4">Write Your Message</h4>
        <p class="leading-relaxed">Share your thoughts, secrets, or random stories with the ocean.</p>
      </div>
      <!-- Step 2 -->
      <div class="text-center p-8 bg-blue-900 bg-opacity-50 rounded-xl shadow-lg hover:scale-105 transition-transform">
        <div class="text-7xl mb-6">🌊</div>
        <h4 class="font-semibold text-2xl mb-4">Release Into the Sea</h4>
        <p class="leading-relaxed">Your message will float anonymously across the virtual ocean to someone else.</p>
      </div>
      <!-- Step 3 -->
      <div class="text-center p-8 bg-blue-900 bg-opacity-50 rounded-xl shadow-lg hover:scale-105 transition-transform">
        <div class="text-7xl mb-6">🏝️</div>
        <h4 class="font-semibold text-2xl mb-4">Discover Messages</h4>
        <p class="leading-relaxed">Read messages from other explorers and connect through their words.</p>
      </div>
    </div>
  </section>

  <!-- Messages Preview Section -->
  <section id="messages" class="py-24 px-6 text-center relative z-10">
    <!-- Section title -->
    <h3 class="text-4xl md:text-5xl font-bold mb-16">Sample Messages</h3>
    <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- Message 1 -->
      <div class="bg-blue-900 bg-opacity-40 p-8 rounded-xl shadow-lg">
        <p class="leading-relaxed">"Just floating by, thinking about life. 🌊"</p>
        <span class="block mt-6 text-sm text-blue-300">Anonymous</span>
      </div>
      <!-- Message 2 -->
      <div class="bg-blue-900 bg-opacity-40 p-8 rounded-xl shadow-lg">
        <p class="leading-relaxed">"Sending positive vibes to whoever finds this bottle!"</p>
        <span class="block mt-6 text-sm text-blue-300">Anonymous</span>
      </div>
      <!-- Message 3 -->
      <div class="bg-blue-900 bg-opacity-40 p-8 rounded-xl shadow-lg">
        <p class="leading-relaxed">"Sometimes the sea knows more than we do."</p>
        <span class="block mt-6 text-sm text-blue-300">Anonymous</span>
      </div>
    </div>
  </section>

  <!-- Footer Section -->
  <footer class="bg-blue-900 py-10 text-center relative z-10">
    <p class="mb-4">&copy; 2025 Loston Ocean. All rights reserved.</p>
    <div class="space-x-6">
      <a href="#" class="hover:text-blue-300 transition-colors">Twitter</a>
      <a href="#" class="hover:text-blue-300 transition-colors">Instagram</a>
      <a href="#" class="hover:text-blue-300 transition-colors">GitHub</a>
    </div>
  </footer>
</div>
